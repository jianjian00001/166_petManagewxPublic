/* pages/goodsClassify/goodsClassify.wxss */
.goodsClassify-container {
flex-direction: column;
width: 100vw;
display: flex;
position: relative;
height: 100vh;

}

.top {
width: 100rpx;
height: 100rpx;
border-radius: 100%;
position: absolute;
bottom: 150rpx;
right: 30rpx;
}

.add {
border: 0px;
box-shadow: rgba(0, 0, 0, 0.19) 0px 3px 18px;
color: rgb(255, 255, 255);
bottom: 10rpx;
right: 30rpx;
outline: none;
border-radius: 100%;
background: rgb(255, 170, 51);
width: 100rpx;
height: 100rpx;
line-height: 100rpx;
font-size: 28rpx;
position: absolute;
text-align: center;
}

.content {

box-sizing: border-box;
flex: 1;
display: flex;
flex-direction: column;
}

.price {
color: red;
}

.operate-shangpin {
display: flex;
justify-content: space-between;
position: absolute;
bottom: 0rpx;
width: 90%;
margin: 0 20rpx;
}

/* 商品名称1 */

