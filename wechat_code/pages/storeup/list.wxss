width: 20vw;
min-height: 90vh;
}

.goodsList {
position: relative;
width: 100vw;
}

.goodInfomation {
width: 80vw;
}

.other {
width: 100vw;
}

/* component/com-search/com-search.wxss */
@import "/static/iconfig/iconfont.wxss";

.search {
height: 10vh;
background-color: white;
display: flex;
align-items: center;
padding: 0 20rpx;
font-size: 24rpx;
position: relative;
}



.search-input {
background-color: #f5f5f5;
height: 6vh;
color: #333;
display: -webkit-box;
display: -webkit-flex;
width: 70vw;
border-radius: 50rpx;
padding-left: 30px;
position: relative;
}

.icons {
width: 6vw;
position: absolute;
left: 20rpx;
line-height: 6vh;
font-size: 30rpx;
}

.searchBtn {
background-color: #f5f5f5;
margin: 20rpx;
height: 6vh;
width: 16vw;
line-height: 6vh;
text-align: center;
letter-spacing: 2rpx;
border-radius: 50rpx;
}
.nodata {
flex-grow: 1;
/* color: rgb(167, 162, 162); */
background-color: rgba(240, 239, 239, 0.918);
font-size: 24rpx;
letter-spacing: 2rpx;
display: flex;
justify-content: center;
align-items: center;
}



.goodsList-box {
display: flex;
justify-content: space-between;
flex-wrap: wrap;
min-height: 90vh;
}
.goods-item {
font-size: 20rpx;
text-align: center;
width: 36vw;
border-radius: 20rpx;
border: 2rpx solid green;
margin: 10rpx;
padding: 4rpx 0;
display: flex;
flex-direction: column;
position: relative;
height: 30vh;
padding: 20rpx 0;
}

.edit-box,
.delete-box {
display: flex;
height: 2vh;
line-height: 2vh;
}



.goods-img {
width: inherit;
height: 30vh;
background: lightcoral;
}

.silder-item {
height: 6vh;
font-size: 20rpx;
letter-spacing: 2rpx;
line-height: 6vh;
text-align: center;
border: rgb(214, 209, 185) solid 2rpx;
margin: 4rpx 0;
}

.active {
border: none;
color: green;
}